@model Task1.Models.UserModel

@{
	ViewData["Title"] = "Login";
}

<form asp-action="UserVerification" asp-controller="User" method="post">

    <label>Username</label>
    <input type="text" asp-for="UserName" required><br>

    <label>Pasword</label>
    <input type="text" asp-for="Password" required><br>

    <button>Sign in</button>
    <a asp-controller="User" asp-action="SignUp">Sign up</a>
</form>

<p style="color: red;">@ViewData["ErrorMessage"]</p>
